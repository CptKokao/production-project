{
  "i18n-ally.localesPaths": ["public/locales", "src/shared/config/i18n"],
  "i18n-ally.sourceLanguage": "ru",
  "i18n-ally.keystyle": "flat",

  // Отключение дефолтных проверок
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // Валидирование расширений для stylelint
  "stylelint.validate": ["css", "scss"],

  // Валидирование расширений для eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Форматирование при сохранении файла
  "editor.formatOnSave": true,

  // Запуск проверок при сохранении файла
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": true
  }
}
